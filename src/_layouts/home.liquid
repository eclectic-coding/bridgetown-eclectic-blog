---
layout: default
---

<div class="home__catalog">
   {% for post in paginator.documents %}
       <a href="{{ post.url |  prepend: site.baseurl }}" class="home__catalog--item">
           <div>
               <time datetime="{{ post.date }}" class="home__catalog--time">{{ post.date |  date: "%B %d, %Y" }}</time>
               <h1 class="home__catalog--title">{{ post.title }}</h1>
               <div class="home__catalog--line"></div>

               <p>{{ post.content | strip_html | truncatewords: 65 }}</p>
           </div>
       </a>
    {% endfor %}
</div>

<div class="home__pagination">
    <div class="home__pagination--flex-container">
        <div>
            {% if paginator.previous_page %}
                <a href="{{ paginator.previous_page_path |  prepend: site.baseurl }}">
                    << Newer
                </a>
            {% else %}
                << Newer
            {% endif %}
        </div>
        <div>
            {% if paginator.next_page %}
                <a href="{{ paginator.next_page_path |  prepend: site.baseurl }}">
                    Older >>
                </a>
            {% endif %}
        </div>
    </div>

</div>

